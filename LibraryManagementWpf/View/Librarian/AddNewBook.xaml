<Window x:Class="LibraryManagementWpf.View.Librarian.AddNewBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:LibraryManagementWpf.View.Admin"
        mc:Ignorable="d"
        Title="AddNewBook" 
        Height="700" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow" DataContext="{StaticResource bookLibVM}">
    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Theme/DefaultTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border Padding="20" Background="#ffffff" MouseDown="Border_MouseDown">
        <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="175"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>
                <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="Thêm mới sách" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold"/>

                <TextBlock Grid.Row="1" Text="Tiêu đề" Style="{StaticResource text}"/>
                <TextBox x:Name="txtTitle" Grid.Column="1" Grid.Row="1" Height="45" Text="{Binding Title}"/>
                <TextBlock Grid.Column="1" Grid.Row="2" Foreground="Red" FontSize="15"
                       Text="{Binding TitleError}"/>

                <TextBlock Grid.Row="3" Text="Tên tác giả" Style="{StaticResource text}"/>
                <TextBox x:Name="txtAuthorNames" Grid.Column="1" Grid.Row="3" Height="45" Margin="0,5,0,0" Text="{Binding Author}"/>
                <TextBlock Grid.Column="1" Grid.Row="4" Foreground="Red" FontSize="15" 
                   Text="{Binding AuthorError}" />

                <TextBlock Grid.Row="5" Text="Số lượng" Style="{StaticResource text}" />
                <TextBox x:Name="txtQuantity" Grid.Column="1" Grid.Row="5" Height="45" Margin="0,5,0,0" 
                     Text="{Binding Quantity}"/>
                <TextBlock Grid.Column="1" Grid.Row="6" Foreground="Red" FontSize="15" 
                   Text="{Binding QuantityError}" />

                <TextBlock Grid.Row="7" Text="Ngày phát hành" Style="{StaticResource text}"/>
                <DatePicker x:Name="datePicker" Grid.Column="1" Grid.Row="7" Margin="0,5,0,0" SelectedDate="{Binding PublicDate, Mode=TwoWay}" />
                <TextBlock Text="{Binding PublicDateError}" Grid.Column="1" Grid.Row="8" Foreground="Red" FontSize="15" />

                <TextBlock Grid.Row="9" Text="Ảnh bìa" Style="{StaticResource text}"/>
                <Button Grid.Column="1" Grid.Row="9" Content="Chọn ảnh" 
                    Command="{Binding SelectImageCommand}" 
                    x:Name="btnSelectImage" 
                    Style="{StaticResource buttonMain}" 
                    HorizontalAlignment="Left" Margin="0,5,0,0"/>
                <Image Grid.Row="10" Grid.Column="1" x:Name="imagePicture" 
               Height="100" Width="200" HorizontalAlignment="Left" 
               Margin="0,5,0,0" Source="{Binding SelectedImage, Mode=TwoWay}"/>
                <TextBlock Text="{Binding ImageError}" Grid.Column="1" Grid.Row="11" Foreground="Red" FontSize="15"/>

                <TextBlock Grid.Row="12" Text="Thể loại" Style="{StaticResource text}"/>
                <Grid Width="150" Height="35" Grid.Row="12" Grid.Column="1" HorizontalAlignment="Left" Margin="0,5,0,0">
                    <ComboBox Grid.Column="1" Grid.Row="4"
                        ItemsSource="{Binding ListCategory}"
                        DisplayMemberPath="CategoryName" 
                        SelectedValuePath="CategoryId"
                        SelectedValue="{Binding CategoryId}"      
                        IsEditable="False"
                        x:Name="Category" Style="{StaticResource ComboBoxFlatStyle}"/>
                </Grid>
                <TextBlock Text="{Binding CategoryError}" Grid.Column="1" Grid.Row="13" Foreground="Red" FontSize="15"/>

                <Grid HorizontalAlignment="Center" Grid.Column="1" Grid.Row="14" Margin="0 50 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="btnCancel" Content="Thoát" Margin="0 0 50 0" 
                    Style="{StaticResource buttonMain}" DataContext="{StaticResource bookLibVM}" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                    <Button Name="btnSave" Content="Lưu" Margin="0 0 0 0" 
                    Grid.Column="1" Style="{StaticResource buttonMainGreen}" DataContext="{StaticResource bookLibVM}" Command="{Binding DoAddNewBookCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>