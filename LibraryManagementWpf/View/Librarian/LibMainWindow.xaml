<Window x:Class="LibraryManagementWpf.View.Librarian.LibMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Dashboard" Height="720" Width="1080" WindowState="Maximized" WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow" AllowsTransparency="False" Background="Transparent" DataContext="{StaticResource LibrarianVM}" >

    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Theme/DefaultTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="#eff2f7" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="MenuColumn" Width="210"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!--Left Section-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Button HorizontalAlignment="Left" Margin="20 28 0 35" Style="{StaticResource topButton}" Click="MenuButton_Click">
                    <Icon:PackIconMaterial Kind="Menu" Width="15" Height="15"></Icon:PackIconMaterial>
                </Button>

                <Border Grid.Row="1" Background="#623ed0">
                    <DockPanel>

                        <!--Menu Titles-->
                        <TextBlock Text="{Binding CurrentUser.Role}" Foreground="White" FontSize="22" FontWeight="SemiBold"
                                   DockPanel.Dock="Top" TextAlignment="Center" Margin="5 25 0 10"/>
                        <TextBlock Text="{Binding CurrentUser.Email}" Foreground="#d0bfff" FontSize="14" FontWeight="SemiBold"
                                   DockPanel.Dock="Top" TextAlignment="Center"></TextBlock>
                        <!--Menu Separator-->
                        <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background="#7e5fdc"/>
                        <!--Menu Buttons-->
                        <StackPanel DockPanel.Dock="Top">
                            <RadioButton Style="{StaticResource menuRadioButon}"
                                Command="{Binding DashboardViewCommand}"
                                 IsChecked="True">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="HomeVariant" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Dashboard" />
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{StaticResource menuRadioButon}"
                                Command="{Binding BookViewCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Book" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Quản lý sách"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{StaticResource menuRadioButon}"
                                 Command="{Binding BorrowViewCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="BookOpenVariant" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Quản lý mượn sách"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{StaticResource menuRadioButon}" Command="{Binding CategoryViewCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="BookAlphabet" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Quản lý thể loại"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{StaticResource menuRadioButon}"
                                Command="{Binding IssuedHistoryViewCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Calendar" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Lịch sử mượn"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{StaticResource menuRadioButon}"
                                 Command="{Binding FineManagementViewCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Cash" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Quản lý phạt"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{StaticResource menuRadioButon}" Command="{Binding ReportViewCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="ForumOutline" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Báo cáo"/>
                                </StackPanel>
                            </RadioButton>
                        </StackPanel>
                        <Button Command="{Binding LoginViewCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Style="{StaticResource menuButon}" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Margin="15 0 15 20">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Logout" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Logout"/>
                            </StackPanel>
                        </Button>
                    </DockPanel>
                </Border>
            </Grid>

            <!--Main Section-->
            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid HorizontalAlignment="Left">
                    <Button x:Name="btnDisplayMenu" Visibility="Hidden" HorizontalAlignment="Left" Margin="50,20,10,0" Style="{StaticResource topButton}" Click="MenuButton_Click">
                        <Icon:PackIconMaterial Kind="Menu" Width="15" Height="15"/>
                    </Button>
                </Grid>

                <ContentControl Grid.Row="1"
                Content="{Binding CurrentView}" Grid.ColumnSpan="2"/>
            </Grid>
        </Grid>
    </Border>
</Window>


