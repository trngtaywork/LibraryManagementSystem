<UserControl x:Class="LibraryManagementWpf.View.Librarian.DashboardLibrarian"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:uc="clr-namespace:LibraryManagementWpf.View.Admin"
        mc:Ignorable="d">
    <Border Background="#eff2f7">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"></RowDefinition>
                <RowDefinition Height="260"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock DataContext="{StaticResource LibrarianVM}" 
                FontSize="20" 
                Foreground="Black" 
                HorizontalAlignment="Left" 
                Margin="50,35,0,0">
                <TextBlock.Text>
                    <MultiBinding StringFormat="Good day, {0}">
                        <Binding Path="CurrentUser.Fullname" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 30 20">
                <Button Content="Today" Style="{StaticResource topMenuButton}" Command="{Binding ShowTodayDataCommand}"/>
                <Button Content="Week" Style="{StaticResource topMenuButton}" Command="{Binding ShowWeekDataCommand}"/>
                <Button Content="Month" Style="{StaticResource topMenuButton}" Command="{Binding ShowMonthDataCommand}"/>
                <Button Content="Year" Style="{StaticResource topMenuButton}" Command="{Binding ShowYearDataCommand}"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                    <!-- Info Cards -->
                <uc:InfoCard Grid.Row="0" Grid.Column="0" Title="Total Categories" Number="{Binding TotalCategory}" Icon="List" 
              Background1="#827bff" Background2="#d9b5ff" EllipseBackground1="#b298fd" EllipseBackground2="#e4bbff"/>

                <uc:InfoCard Grid.Row="0" Grid.Column="1" Title="Total Books" Number="{Binding TotalBook}" Icon="Book" 
              Background1="#fd8a87" Background2="#f3ab92" EllipseBackground1="#fbd5a8" EllipseBackground2="#fbd89b"/>

                <uc:InfoCard Grid.Row="1" Grid.Column="0" Title="Total Accounts" Number="{Binding TotalAccount}" Icon="User" 
              Background1="#fc84cb" Background2="#fc8fae" EllipseBackground1="#fc8fae" EllipseBackground2="#ffabe6"/>

                <uc:InfoCard Grid.Row="1" Grid.Column="1" Title="Total Fine" Number="{Binding TotalFine}" Icon="Coins" 
              Background1="#827bff" Background2="#d9b5ff" EllipseBackground1="#b298fd" EllipseBackground2="#e4bbff"/>

                <!-- Last Borrowed Section -->
                <Border Grid.RowSpan="2" Grid.Column="2" CornerRadius="20" Padding="0 15" Margin="0 0 0 10" Background="#ffffff" Height="300">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="20 0 0 15">
                            <TextBlock Text="Lần mượn gần nhất" Foreground="Black" FontSize="20" FontWeight="SemiBold"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding LastBorrowedBooks}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="10 5">
                                            <Icon:PackIconMaterial Kind="Book" Width="20" Height="20" Margin="0 0 10 0" Foreground="#5b60c4"/>
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16" Margin="0 0 10 0"/>
                                            <TextBlock Text=" - " FontSize="16"/>
                                            <TextBlock Text="{Binding Desc}" FontSize="16" Foreground="Gray"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Recently Fine DataGrid and Pagination Controls -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Text="Recently Fine" FontSize="20" Margin="10 0 0 0" FontWeight="Bold"/>
                </Grid>

                <Grid Grid.Row="1">
                    <DataGrid x:Name="dgvFine" Background="#ffffff" AutoGenerateColumns="False" Margin="10" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Fine ID" Binding="{Binding FineId}" Width="Auto" />
                            <DataGridTextColumn Header="Reason" Binding="{Binding Reason}" Width="*" />
                            <DataGridTextColumn Header="Fine Amount" Binding="{Binding FineAmount}" Width="*" />
                            <DataGridTextColumn Header="Paid Date" Binding="{Binding Paid}" Width="Auto" />
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                            <DataGridTextColumn Header="Damage Fee" Binding="{Binding DamageFee}" Width="*" />
                            <DataGridTextColumn Header="Overdue Fee" Binding="{Binding OverdueFee}" Width="*" />
                            <DataGridTextColumn Header="Student Code" Binding="{Binding StudentCode}" Width="*" />

                            <DataGridTemplateColumn Header="Operations" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Command="{Binding DataContext.ViewFineDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource gridEditButton}" Margin="5 0 0 0">
                                                <Icon:PackIconMaterial Kind="EyeOutline" Style="{StaticResource gridButtonIcon}"/>
                                            </Button>
                                            <Button Command="{Binding DataContext.DeleteFineCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource gridRemoveButton}" Margin="5 0 0 0">
                                                <Icon:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
            <!-- Pagination Controls -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="btnPrevious" Content="Previous" Click="PreviousPage_Click" />
                <TextBlock x:Name="lblPageInfo" Text="Page 1 of 1" Margin="10 0" VerticalAlignment="Center" />
                <Button x:Name="btnNext" Content="Next" Click="NextPage_Click" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
