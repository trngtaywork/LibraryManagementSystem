<Window x:Class="LibraryManagementWpf.View.Librarian.ReportDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementWpf.View.Librarian"
        mc:Ignorable="d"
        Title="ReportDetails"
        Height="280" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Feedback ID -->
        <TextBlock Text="Report ID: " FontWeight="Bold" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Report.ReportId}" Grid.Row="0" Margin="100,0,0,0" VerticalAlignment="Center"/>

        <!-- Student Code -->
        <TextBlock Text="Student Code: " FontWeight="Bold" Grid.Row="1" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <TextBlock Text="{Binding Report.User.StudentCode}" Grid.Row="1" Margin="100,10,0,0" VerticalAlignment="Center"/>

        <!-- Feedback Text -->
        <TextBlock Text="Report Reason:" FontWeight="Bold" Grid.Row="2" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <TextBox Height="100" Text="{Binding Report.ReportReason}" x:Name="txtFeedbackText" Grid.Row="2" Margin="100,10,0,0" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>

        <!-- Feedback Date -->
        <TextBlock Text="Date: " FontWeight="Bold" Grid.Row="3" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <TextBlock Text="{Binding Report.CreatedAt}" Grid.Row="3" Margin="100,10,0,0" VerticalAlignment="Center"/>
    </Grid>
</Window>
