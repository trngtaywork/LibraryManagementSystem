<Window x:Class="LibraryManagementWpf.View.Librarian.AddNewBorrow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:LibraryManagementWpf.View.Admin"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="AddNewLibrarianAccount" 
        Height="560" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow" DataContext="{StaticResource borrowLibVM}">
    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Theme/DefaultTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border Padding="20" Background="#ffffff" MouseDown="Border_MouseDown">
        <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="175"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="Thêm mới yêu cầu mượn sách" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                <TextBlock Grid.Row="1" Text="Thông tin người mượn" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <TextBlock Text="Mã sinh viên: " VerticalAlignment="Center" Style="{StaticResource text}"/>
                    <TextBox Text="{Binding StudentCode}" x:Name="txtStudentCode"  Width="200" Margin="0 0 10 0"/>
                    <Button x:Name="btnCheckInfo" Height="35" Style="{StaticResource buttonMainGreen}" Content="Lấy thông tin" Command="{Binding CheckInfoCommand}"/>
                </StackPanel>

                <TextBlock Text="{Binding StudentCodeError}" Grid.Column="1" Grid.Row="4" Foreground="Red" FontSize="15"/>
                <TextBlock Grid.Row="5" Text="Tên" Style="{StaticResource text}"/>
                <TextBlock Grid.Row="7" Text="Số điện thoại" Style="{StaticResource text}"/>
                <TextBlock Grid.Row="9" Text="Email" Style="{StaticResource text}"/>

                <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding FullName}" x:Name="txtFullName" IsReadOnly="True"/>
                <TextBox Grid.Column="1" Grid.Row="7" Text="{Binding Phone}" x:Name="txtPhone" IsReadOnly="True"/>
                <TextBox Grid.Column="1" Grid.Row="9" Text="{Binding Email}" x:Name="txtEmail" IsReadOnly="True"/>

                <!---Filter TextBox-->
                <TextBlock Grid.Row="11" Text="Thể loại" Style="{StaticResource text}"/>
                <Grid Width="150" Grid.Row="11" Grid.Column="1" HorizontalAlignment="Left">
                    <ComboBox Grid.Column="1" Grid.Row="4"
                          ItemsSource="{Binding ListCategory}"
                          DisplayMemberPath="CategoryName" 
                          SelectedValuePath="CategoryId"
                          SelectedValue="{Binding CategoryId}"
                          IsEditable="False"
                          x:Name="Category" 
                          Style="{StaticResource ComboBoxFlatStyle}">   
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding CategorySelectionChangedCommand}"
                                   CommandParameter="{Binding SelectedValue, ElementName=Category}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>

                </Grid>
                <TextBlock Text="{Binding CategoryError}" Grid.Column="1" Grid.Row="12" Foreground="Red" FontSize="15"/>

                <!---Filter TextBox-->
                <TextBlock Grid.Row="13" Text="Sách" Style="{StaticResource text}"/>
                <Grid Width="150" HorizontalAlignment="Left" Grid.Row="13" Grid.Column="1">
                    <ComboBox Grid.Column="1" Grid.Row="4"
                          ItemsSource="{Binding ListBook}"
                          DisplayMemberPath="Title" 
                          SelectedValuePath="BookId"
                          SelectedValue="{Binding BookId}"
                          IsEditable="False"
                          Style="{StaticResource ComboBoxFlatStyle}">

                    </ComboBox>
                </Grid>
                <TextBlock Text="{Binding BookError}" Grid.Column="1" Grid.Row="14" Foreground="Red" FontSize="15"/>

                <Grid HorizontalAlignment="Left" Grid.Column="1" Grid.Row="15" Margin="0 30 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Thoát" Name="btnCancel" Margin="0 0 50 0" Style="{StaticResource buttonMain}" Command="{Binding CancelWindowCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                    <Button Content="Lưu" Name="btnAdd" Margin="0 0 80 0" Grid.Column="1" Style="{StaticResource buttonMainGreen}" Command="{Binding AddBorrowCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>