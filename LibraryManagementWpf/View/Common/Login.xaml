<UserControl x:Class="LibraryManagementWpf.View.Common.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        d:DesignHeight="720" d:DesignWidth="1080">

    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Theme/DefaultTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

            <Grid>
            <!--Input Form-->
        <Image Source="/Images/logoFPT.png" Height="150" Margin="-50,0,0 500"/>
            <Border Width="300" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="#E2E9E9" BorderThickness="2" CornerRadius="10"
                    Padding="30" Background="White">
                <StackPanel>
                    <TextBlock Foreground="#5a5a5a" FontWeight="SemiBold" FontSize="16" Margin="0 0 0 10" Text="Login"/>
                    <Grid>
                    <TextBlock Visibility="{Binding ElementName=txtEmail, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}" 
                                   Margin="35 0 5 0" VerticalAlignment="Center" Foreground="#bdbdbd" Panel.ZIndex="1" 
                                   IsHitTestVisible="False" Text="Enter Email"/>
                        <TextBox Style="{StaticResource field}"  x:Name="txtEmail" Text="{Binding Email}"/>
                        <Icon:PackIconMaterial Kind="EmailVariant" Width="15" Foreground="#c7c7c7" VerticalAlignment="Center" Margin="10 0 0 0"/>
                    </Grid>
                    <TextBlock Foreground="Red" Text="{Binding errorEmail}"/>
                    <Grid>
                        <TextBlock x:Name="placeholderText" Visibility="Visible" Margin="35 0 5 0"
                           VerticalAlignment="Center" Foreground="#bdbdbd" Panel.ZIndex="1" 
                           IsHitTestVisible="False" Text="Enter Password"/>
                        <PasswordBox PasswordChanged="txtPassword_PasswordChanged" Style="{StaticResource field1}" x:Name="txtPassword">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName ="PasswordChanged">
                                    <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}" CommandParameter="{Binding ElementName=txtPassword}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </PasswordBox>
                        <TextBox x:Name="txtPasswordVisible" 
                         Style="{StaticResource field}" 
                         Visibility="Hidden" 
                         IsReadOnly="True"/>
                        <ToggleButton x:Name="btnShowPassword" 
                          Width="25" 
                          Height="25" 
                          Style="{StaticResource NoBorderButtonStyle}" 
                          HorizontalAlignment="Right" 
                          Margin="5 0 10 0" 
                          MouseEnter="btnShowPassword_Click" MouseLeave="btnShowPassword_MouseLeave">
                            <Icon:PackIconMaterial Kind="Eye" Background="White" Width="20" Foreground="#c7c7c7" />
                        </ToggleButton>
                        <Icon:PackIconMaterial Kind="LockOutline" Width="15" Foreground="#c7c7c7" VerticalAlignment="Center" Margin="10 0 0 0"/>
                    </Grid>
                    <TextBlock Foreground="Red" Text="{Binding errorPassword}"/>

                <StackPanel HorizontalAlignment="Right">
                    <Button Command="{Binding ForgotPasswordCommand}" BorderThickness="0" Content="Forgot Password"
                        Foreground="Gray"
                        Background="White"
                        Cursor="Hand">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Icon:PackIconMaterial Kind="LockReset" 
                                           Width="16" 
                                           Height="16" 
                                           Margin="0,0,5,0" 
                                           Foreground="Gray" />
                                    <TextBlock Foreground="Gray" Text="Forgot Password" 
                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>


                <!--Button-->
                    <Grid Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                    <Button IsDefault="True" Command="{Binding AuthenCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Content="Sign in" Style="{StaticResource mainButton}" Margin="0 0 5 0" BorderBrush="#623ed0" Background="#623ed0" Foreground="#FFFFFF"/>
                    <Button Command="{Binding RegisterViewCommand}" Content="Create Account" Style="{StaticResource mainButton}" Margin="5 0 0 0" Grid.Column="1"/>
                    </Grid>
                </StackPanel>
            </Border>
    </Grid>
</UserControl>
