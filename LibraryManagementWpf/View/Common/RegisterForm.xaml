<UserControl x:Class="LibraryManagementWpf.View.Common.RegisterForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:LibraryManagementWpf.View.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" DataContext="{StaticResource AuthenVM}">
    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Theme/DefaultTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <!--Input Form-->
        <Image Source="/Images/logoFPT.png" Height="150" Margin="-50,0,0 500"/>
        <Border Width="300" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="#E2E9E9" BorderThickness="2" CornerRadius="10"
     Padding="30" Background="White">
            <StackPanel>
                <TextBlock Foreground="#5a5a5a" FontWeight="SemiBold" FontSize="16" Margin="0 0 0 10" Text="Register"/>
                <Grid>
                    <TextBlock Visibility="{Binding ElementName=txtEmail, Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}" 
                    Margin="35 0 5 0" VerticalAlignment="Center" Foreground="#bdbdbd" Panel.ZIndex="1" 
                    IsHitTestVisible="False" Text="Enter Email"/>
                    <TextBox Style="{StaticResource field}"  x:Name="txtEmail"  Text="{Binding Email}"/>
                    <Icon:PackIconMaterial Kind="EmailVariant" Width="15" Foreground="#c7c7c7" VerticalAlignment="Center" Margin="10 0 0 0"/>
                </Grid>
                <TextBlock Foreground="Red" Text="{Binding errorEmail}"/>

                <Grid>
                    <TextBlock Visibility="{Binding ElementName=txtStudentCode, Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}" Margin="35 0 5 0" 
                        VerticalAlignment="Center" Foreground="#bdbdbd" Panel.ZIndex="1" IsHitTestVisible="False" 
                        Text="Enter Student Code"/>
                    <TextBox Style="{StaticResource field}" x:Name="txtStudentCode" Text="{Binding StudentCode}"/>
                    <Icon:PackIconMaterial Kind="Qrcode" Width="15" Foreground="#c7c7c7" VerticalAlignment="Center" Margin="10 0 0 0"/>
                </Grid>
                <TextBlock Foreground="Red" Text="{Binding errorStudentCode}"/>

                <Grid>
                    <TextBlock x:Name="placeHolder" Visibility="{Binding ElementName=txtPassword, Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}" Margin="35 0 5 0" 
                    VerticalAlignment="Center" Foreground="#bdbdbd" Panel.ZIndex="1" IsHitTestVisible="False" 
                    Text="Enter Password"/>
                    <PasswordBox PasswordChanged="txtPassword_PasswordChanged" Style="{StaticResource field1}" x:Name="txtPassword">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName ="PasswordChanged">
                                <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}" CommandParameter="{Binding ElementName=txtPassword}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </PasswordBox>
                    <TextBox x:Name="txtPasswordVisible" 
                 Style="{StaticResource field}" 
                 Visibility="Hidden" 
                 IsReadOnly="True"/>
                    <ToggleButton x:Name="btnShowPassword" 
                  Width="25" 
                  Height="25" 
                  Style="{StaticResource NoBorderButtonStyle}" 
                  HorizontalAlignment="Right" 
                  Margin="5 0 10 0" 
                  MouseEnter="btnShowPassword_Click" MouseLeave="btnShowPassword_MouseLeave">
                        <Icon:PackIconMaterial Kind="Eye" Background="White" Width="20" Foreground="#c7c7c7" />
                    </ToggleButton>
                    <Icon:PackIconMaterial Kind="LockOutline" Width="15" Foreground="#c7c7c7" VerticalAlignment="Center" Margin="10 0 0 0"/>
                </Grid>
                <TextBlock Foreground="Red" Text="{Binding errorPassword}"/>

                <Grid>
                    <TextBlock x:Name="placeHolder1" Visibility="{Binding ElementName=txtRePassword, Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}" Margin="35 0 5 0" 
                        VerticalAlignment="Center" Foreground="#bdbdbd" Panel.ZIndex="1" IsHitTestVisible="False" 
                        Text="Re-Enter Password"/>
                    <PasswordBox PasswordChanged="txtRePassword_PasswordChanged" Style="{StaticResource field1}" x:Name="txtRePassword">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName ="PasswordChanged">
                                <i:InvokeCommandAction Command="{Binding RePasswordChangedCommand}" CommandParameter="{Binding ElementName=txtRePassword}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </PasswordBox>
                    <TextBox x:Name="txtPasswordVisible1" 
                         Style="{StaticResource field}" 
                         Visibility="Hidden" 
                         IsReadOnly="True"/>
                    <ToggleButton x:Name="btnShowPassword1" 
                          Width="25" 
                          Height="25" 
                          Style="{StaticResource NoBorderButtonStyle}" 
                          HorizontalAlignment="Right" 
                          Margin="5 0 10 0" 
                          MouseEnter="btnShowPassword_Click" MouseLeave="btnShowPassword_MouseLeave">
                        <Icon:PackIconMaterial Kind="Eye" Background="White" Width="20" Foreground="#c7c7c7" />
                    </ToggleButton>
                    <Icon:PackIconMaterial Kind="LockOutline" Width="15" Foreground="#c7c7c7" VerticalAlignment="Center" Margin="10 0 0 0"/>
                </Grid>
                <TextBlock Foreground="Red" Text="{Binding errorRePassword}"/>

                <!--Button-->
                <Grid Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Command="{Binding RegisterCommand}" IsDefault="True" Content="Sign up" Style="{StaticResource mainButton}" Margin="0 0 5 0" BorderBrush="#623ed0" Background="#623ed0" Foreground="#FFFFFF"/>
                    <Button Content="Already have ?" Style="{StaticResource mainButton}" Command="{Binding LoginViewCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Margin="5 0 0 0" Grid.Column="1"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
