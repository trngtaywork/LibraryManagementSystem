<UserControl x:Class="LibraryManagementWpf.View.Common.ForgotPasswordForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:LibraryManagementWpf.View.Common"
             mc:Ignorable="d" 
                 d:DesignHeight="720" d:DesignWidth="1080" DataContext="{StaticResource AuthenVM}">

    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Theme/DefaultTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Image Source="/Images/logoFPT.png" Height="150" Margin="-50,0,0 500"/>

        <Border Width="350" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="#E2E9E9" BorderThickness="2" CornerRadius="10"
                Padding="30" Background="White">
            <StackPanel>
                <TextBlock Foreground="#5a5a5a" FontWeight="SemiBold" FontSize="18" Margin="0 0 0 15" Text="Forgot Password"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Icon:PackIconMaterial Kind="Email" Width="20" Foreground="#c7c7c7" VerticalAlignment="Center" Margin="10,0,0,0"/>

                    <TextBox x:Name="txtEmail" 
                             Text="{Binding Email}" 
                             Style="{StaticResource field}" 
                             MaxLength="150" 
                             Grid.Column="1" />
                </Grid>

                <TextBlock Foreground="Red" Text="{Binding errorEmail}" Margin="0 10 0 5"/>
                <Button Content="Back To Login" 
                        Command="{Binding LoginViewCommand}" 
                        Style="{StaticResource gridEditButton}" 
                        Foreground="White" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0" Height="31" Width="176"/> 
                <Button Content="Reset Password" 
                        Command="{Binding RequestPasswordResetCommand}" 
                        Style="{StaticResource buttonMainGreen}" 
                        Foreground="White" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0" Height="31" Width="176"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
