<Window x:Class="LibraryManagementWpf.View.Admin.AddNewStudentAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:LibraryManagementWpf.View.Admin"
        mc:Ignorable="d"
        Title="AddNewStudentAccount"
        Height="500" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow" DataContext="{StaticResource StuAccVM}">
    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Theme/DefaultTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border Padding="20" Background="#ffffff" MouseDown="Border_MouseDown">
        <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>
                <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="Thêm mới tài khoản" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                <TextBlock Grid.Row="2" Text="Email" Style="{StaticResource text}"/>
                <TextBlock Grid.Row="4" Text="Họ và tên" Style="{StaticResource text}"/>
                <TextBlock Grid.Row="6" Text="Số điện thoại" Style="{StaticResource text}"/>
                <TextBlock Grid.Row="8" Text="Mã sinh viên" Style="{StaticResource text}"/>

                <TextBox Foreground="Black" Grid.Column="1" Grid.Row="2" Text="{Binding Email}"/>
                <TextBlock Text="{Binding EmailError}" Grid.Column="1" Grid.Row="3" Foreground="Red" FontSize="15"/>
                <TextBox Foreground="Black" Grid.Column="1" Grid.Row="4" Text="{Binding Fullname}"/>
                <TextBlock Text="{Binding FullnameError}" Grid.Column="1" Grid.Row="5" Foreground="Red" FontSize="15"/>
                <TextBox Foreground="Black" Grid.Column="1" Grid.Row="6" Text="{Binding Phone}"/>
                <TextBlock Text="{Binding PhoneError}" Grid.Column="1" Grid.Row="7" Foreground="Red" FontSize="15"/>
                <TextBox Foreground="Black" Grid.Column="1" Grid.Row="8" Text="{Binding StudentCode}"/>
                <TextBlock Text="{Binding StudentCodeError}" Grid.Column="1" Grid.Row="9" Foreground="Red" FontSize="15"/>

                <Grid Grid.Column="1" Grid.Row="12" Margin="0 30 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button DataContext="{StaticResource StuAccVM}" Command="{Binding CancelEditAccountLibrarianViewCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Content="Thoát" Margin="0 0 10 0" Style="{StaticResource buttonMain}"/>
                    <Button DataContext="{StaticResource StuAccVM}" Command="{Binding AddCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Content="Lưu" Margin="10 0 0 0" Grid.Column="1" Style="{StaticResource buttonMainGreen}"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>