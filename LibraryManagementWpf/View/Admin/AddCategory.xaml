<Window x:Class="LibraryManagementWpf.View.Admin.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementWpf.View.Admin"
        mc:Ignorable="d"
        Title="AddNewCategory" 
        Height="250" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow" DataContext="{StaticResource cateAdminVM}">
    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Theme/DefaultTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Padding="20" Background="#ffffff" MouseDown="Border_MouseDown">
        <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    
                </Grid.RowDefinitions>
                <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="Thêm mới thể loại" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                <TextBlock Grid.Row="2" Text="Tên thể loại" Style="{StaticResource text}"/>

                <TextBox Foreground="Black" Grid.Column="1" Grid.Row="2" Text="{Binding CategoryName}"/>
                <TextBlock Text="{Binding CategoryNameError}" Grid.Column="1" Grid.Row="3" Foreground="Red" FontSize="15"/>

                <Grid Grid.Column="1" Grid.Row="10" Margin="0 25 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Content="Thoát" Margin="0 0 10 0" Style="{StaticResource buttonMain}"/>
                    <Button Command="{Binding DoAddCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Content="Lưu" Margin="10 0 0 0" Grid.Column="1" Style="{StaticResource buttonMainGreen}"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
