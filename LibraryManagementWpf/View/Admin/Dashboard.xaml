<UserControl x:Class="LibraryManagementWpf.View.Admin.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:uc="clr-namespace:LibraryManagementWpf.View.Admin"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        d:DesignHeight="720" d:DesignWidth="1080" DataContext="{StaticResource adminDashboardVM}">

    <Border Background="#eff2f7">
        <Grid Margin="30 20 20 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"></RowDefinition>
                <RowDefinition Height="260"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>


            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,30,20">
                <Button Command="{Binding DashboardAllCommand}" Content="All" Style="{StaticResource topMenuButton}" />
                <Button Command="{Binding DashboardTodayCommand}" Content="Today" Style="{StaticResource topMenuButton}"/>
                <Button Command="{Binding DashboardLastWeekCommand}" Content="Week" Style="{StaticResource topMenuButton}"/>
                <Button Command="{Binding DashboardLastMonthCommand}" Content="Month" Style="{StaticResource topMenuButton}"/>
                <Button Command="{Binding DashboardLastYearCommand}" Content="Year" Style="{StaticResource topMenuButton}"/>
            </StackPanel>

            <TextBlock DataContext="{StaticResource AdminVM}" 
                   FontSize="20" 
                   Foreground="Black" 
                   HorizontalAlignment="Left" 
                   Margin="50,35,0,0">
                <TextBlock.Text>
                    <MultiBinding StringFormat="Good day, {0}">
                        <Binding Path="CurrentUser.Fullname" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Info Cards -->
                <uc:InfoCard Grid.Row="0" Grid.Column="0" Title="Total Categories" Number="{Binding TotalCategory}" Icon="List" 
                             Background1="#827bff" Background2="#d9b5ff" EllipseBackground1="#b298fd" EllipseBackground2="#e4bbff"/>

                <uc:InfoCard Grid.Row="0" Grid.Column="1" Title="Total Books" Number="{Binding TotalBook}" Icon="Book" 
                             Background1="#fd8a87" Background2="#f3ab92" EllipseBackground1="#fbd5a8" EllipseBackground2="#fbd89b"/>

                <uc:InfoCard Grid.Row="1" Grid.Column="0" Title="Total Accounts" Number="{Binding TotalAccount}" Icon="User" 
                             Background1="#fc84cb" Background2="#fc8fae" EllipseBackground1="#fc8fae" EllipseBackground2="#ffabe6"/>

                <uc:InfoCard Grid.Row="1" Grid.Column="1" Title="Total Fine" Number="{Binding TotalFine}" Icon="Coins" 
                             Background1="#827bff" Background2="#d9b5ff" EllipseBackground1="#b298fd" EllipseBackground2="#e4bbff"/>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Book List Section -->
                <Border CornerRadius="20" Padding="5 5" Background="#ffffff" Margin="0,0,10,0">
                    <Grid Margin="0,0,-5,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <fa:IconImage Icon="Book" Style="{StaticResource titleIcon}"/>
                            <TextBlock Text="Books List - Total:" Foreground="Black" Style="{StaticResource titleText}"/>
                            <TextBlock Text="{Binding TotalBookRecords}" Foreground="Black" Style="{StaticResource titleText}"/>
                        </StackPanel>

                        <!-- Book DataGrid -->
                        <DataGrid Name="dgBooks" Grid.Row="1"
                            ItemsSource="{Binding DisplayedListPerPage}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Margin="0,0,10,10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tiêu đề" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="Tác giả" Binding="{Binding AuthorNames}" Width="*"/>
                                <DataGridTextColumn Header="Thể loại" Binding="{Binding CategoryName}" Width="*"/>
                                <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="*"/>
                                <DataGridTextColumn Header="Ngày phát hành" Binding="{Binding PublicationDate}" Width="*"/>
                                <DataGridTextColumn Header="Ngày tạo" Binding="{Binding CreatedAt}" Width="*"/>
                                <DataGridTextColumn Header="Người tạo" Binding="{Binding CreatedBy}" Width="*"/>
                                <DataGridTextColumn Visibility="Collapsed" Header="Category Id" Binding="{Binding CategoryId}" Width="*"/>

                                <DataGridTemplateColumn Header="Ảnh bìa" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding Image}" Width="50" Height="50"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <!-- Pagination Section -->
                        <Border CornerRadius="5" Padding="5" Background="White" Margin="0,0,10,10" Grid.Row="2" HorizontalAlignment="Right" BorderBrush="#dee4ec" BorderThickness="1">
                            <StackPanel Orientation="Horizontal">
                                <!-- Previous Page Button -->
                                <Button Style="{StaticResource paginButton}" 
                                     Command="{Binding PreviousPageCommand}" 
                                     IsEnabled="{Binding IsPreviousPageEnabled}">
                                    <Icon:PackIconMaterial Kind="ChevronLeft" Style="{StaticResource paginButtonIcon}"/>
                                </Button>

                                <Rectangle Width="1" Fill="#dee4ec" Margin="3 7"/>

                                <Button Style="{StaticResource paginButton}"  Background="#7950f2" Foreground="#ffffff">
                                    <TextBlock>
                                         <Run Text="{Binding CurrentPage}" />
                                         <Run Text="/" />
                                         <Run Text="{Binding TotalPages, Mode=OneWay}" />
                                    </TextBlock>
                                </Button>

                                <Rectangle Width="1" Fill="#dee4ec" Margin="3 7"/>

                                <!-- Next Page Button -->
                                <Button Style="{StaticResource paginButton}" 
                                     Command="{Binding NextPageCommand}" 
                                     IsEnabled="{Binding IsNextPageEnabled}">
                                    <Icon:PackIconMaterial Kind="ChevronRight" Style="{StaticResource paginButtonIcon}"/>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Column="1" CornerRadius="20" Padding="0 25" Background="#ffffff" Margin="15 0 10 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="20 0 0 15">
                            <fa:IconImage Icon="Circle" Style="{StaticResource titleIcon}"/>
                            <TextBlock Text="Lần mượn gần nhất" Foreground="Black" Style="{StaticResource titleText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1">
                            <ItemsControl ItemsSource="{Binding ListBorrow}" Height="253" Width="272">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <uc:Borrow Title="{Binding BookTitle}" 
                                           Desc="{Binding UserFullName}" 
                                           Icon="Book"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
