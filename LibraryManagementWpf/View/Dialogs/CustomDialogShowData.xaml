<Window x:Class="LibraryManagementWpf.View.Dialogs.CustomDialogShowData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementWpf.View.Dialogs"
        mc:Ignorable="d"
        Title="CustomDialogShowData" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="10" Background="White" Padding="20" BorderBrush="#5b60c4" BorderThickness="2">
        <StackPanel>
            <TextBlock x:Name="TitleText" FontSize="18" FontWeight="Bold" Foreground="#5b60c4" TextAlignment="Center" Margin="0 0 0 10"/>
            <TextBlock x:Name="ContentText" FontSize="16" TextAlignment="Center" Margin="0 10 0 20"/>
            <Button Content="OK" Width="80" Height="30" HorizontalAlignment="Center" Click="CloseDialog" Background="#5b60c4" Foreground="White" BorderBrush="#5b60c4" BorderThickness="0"/>
        </StackPanel>
    </Border>
</Window>
