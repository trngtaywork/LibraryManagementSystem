<Window x:Class="LibraryManagementWpf.View.Dialogs.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomDialog"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">
    <Border CornerRadius="10" Background="White" Padding="20" BorderBrush="#5b60c4" BorderThickness="2">
        <StackPanel>
            <TextBlock x:Name="TitleText" FontSize="18" FontWeight="Bold" Foreground="#5b60c4" TextAlignment="Center" Margin="0 0 0 10"/>

            <!-- Bảng Grid hiển thị thông tin chi tiết -->
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Fine Details as Table Rows -->
                <TextBlock Text="ID:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Margin="0 0 10 0"/>
                <TextBlock x:Name="FineIdText" Grid.Row="0" Grid.Column="1"/>

                <TextBlock Text="Reason:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" Margin="0 0 10 0"/>
                <TextBlock x:Name="ReasonText" Grid.Row="1" Grid.Column="1"/>

                <TextBlock Text="Amount:" FontWeight="Bold" Grid.Row="2" Grid.Column="0" Margin="0 0 10 0"/>
                <TextBlock x:Name="AmountText" Grid.Row="2" Grid.Column="1"/>

                <TextBlock Text="Paid:" FontWeight="Bold" Grid.Row="3" Grid.Column="0" Margin="0 0 10 0"/>
                <TextBlock x:Name="PaidText" Grid.Row="3" Grid.Column="1"/>

                <TextBlock Text="Status:" FontWeight="Bold" Grid.Row="4" Grid.Column="0" Margin="0 0 10 0"/>
                <TextBlock x:Name="StatusText" Grid.Row="4" Grid.Column="1"/>

                <TextBlock Text="Student Code:" FontWeight="Bold" Grid.Row="5" Grid.Column="0" Margin="0 0 10 0"/>
                <TextBlock x:Name="StudentCodeText" Grid.Row="5" Grid.Column="1"/>
            </Grid>

            <!-- OK Button -->
            <Button Content="OK" Width="80" Height="30" HorizontalAlignment="Center" Click="CloseDialog" Background="#5b60c4" Foreground="White" BorderBrush="#5b60c4" BorderThickness="0"/>
        </StackPanel>
    </Border>
</Window>