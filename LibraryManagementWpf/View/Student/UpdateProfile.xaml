<Window x:Class="LibraryManagementWpf.View.Student.UpdateProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementWpf.View.Student"
        mc:Ignorable="d"
        Title="UpdateProfile" 
        Height="700" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow" >
    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Theme/DefaultTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border Padding="20" Background="#ffffff" >
        <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="175"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>
                <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="Update Profile" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold"/>

                <TextBlock Grid.Row="1" Text="Email" Style="{StaticResource text}"/>
                <TextBox x:Name="txtEmail" Grid.Column="1" Grid.Row="1" Height="45" Text="{Binding Email}" IsReadOnly="True"/>
                

                <TextBlock Grid.Row="3" Text="Student Name" Style="{StaticResource text}"/>
                <TextBox x:Name="txtFullName" Grid.Column="1" Grid.Row="3" Height="45" Margin="0,5,0,0" Text="{Binding Fullname}" />
                
                
                <TextBlock Grid.Row="5" Text="Student Code" Style="{StaticResource text}"/>
                <TextBox x:Name="txtStudentCode" Grid.Column="1" Grid.Row="5" Height="45" Margin="0,5,0,0" Text="{Binding StudentCode}" IsReadOnly="True"/>
                
                
                <TextBlock Grid.Row="7" Text="Phone" Style="{StaticResource text}" />
                <TextBox x:Name="txtPhone" Grid.Column="1" Grid.Row="7" Height="45" Margin="0,5,0,0" 
                 Text="{Binding Phone}"/>
                <TextBlock Grid.Column="1" Grid.Row="8" Foreground="Red" FontSize="15" 
               Text="{Binding PhoneError}" />

                <TextBlock Grid.Row="9" Text="Image" Style="{StaticResource text}"/>
                <Button Grid.Column="1" Grid.Row="9" Content="Select Image" 
                Command="{Binding SelectImageCommand}" 
                x:Name="btnSelectImage" 
                Style="{StaticResource buttonMain}" 
                HorizontalAlignment="Left" Margin="0,5,0,0"/>
                <Image Grid.Row="10" Grid.Column="1" x:Name="imagePicture" 
                       Height="100" Width="200" HorizontalAlignment="Left" 
                       Margin="0,5,0,0" Source="{Binding SelectedImage, Mode=TwoWay}"/>
                <TextBlock Text="{Binding ImageError}" Grid.Column="1" Grid.Row="11" Foreground="Red" FontSize="15"/>

                <Grid HorizontalAlignment="Center" Grid.Column="1" Grid.Row="12" Margin="0 50 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="btnCancel" Content="Thoát" Margin="0 0 50 0" 
                Style="{StaticResource buttonMain}" Click="btnCancel_Click"/>
                    <Button Name="btnSave" Content="Save" Margin="0 0 0 0" 
                Grid.Column="1" Style="{StaticResource buttonMainGreen}" Command="{Binding UpdateProfileCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
