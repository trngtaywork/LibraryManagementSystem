<Window x:Class="LibraryManagementWpf.View.Student.ReportBorrowedBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementWpf.View.Student"
        xmlns:uc="clr-namespace:LibraryManagementWpf.View.Admin"
        mc:Ignorable="d"
        Title="ReportBorrowedBook"        
        Height="280" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Theme/DefaultTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Window.Resources>
    <Border Padding="20" Background="#ffffff">

        <Grid>
            <StackPanel>
                <TextBlock Text="Báo cáo mượn sách" HorizontalAlignment="Center"  VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>

                <TextBlock Margin="5,10,0,0" Style="{StaticResource text}">
                    <Run  Text="Sách đang mượn: " FontWeight="Bold"/>
                    <Run  Text="{Binding BookBorrowedTitle}"/>
                </TextBlock>
                <TextBlock Margin="5,10,0,0" Style="{StaticResource text}">
                    <Run  Text="Trạng thái: " FontWeight="Bold"/>
                    <Run  Text="{Binding BookBorrowedStatusString}"/>
                </TextBlock>
                <TextBlock Margin="5,10,0,0" Style="{StaticResource text}">
                    <Run  Text="Thủ thư: " FontWeight="Bold"/>
                    <Run  Text="{Binding LibrarianInCharge}"/>
                </TextBlock>

                <Grid Margin="5,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Lý do báo cáo:" FontWeight="Bold" Style="{StaticResource text}"/>
                    <ComboBox Grid.Column="1" HorizontalAlignment="Left" Style="{StaticResource ComboBoxFlatStyle}" MinWidth="200" 
                                ItemsSource="{Binding ReportReasons}" SelectedValue="{Binding SelectedReportReason}">
                    </ComboBox>
                </Grid>
                <Grid  Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Lưu" Margin="0 0 10 0" Grid.Column="1" Style="{StaticResource buttonMainGreen}" Command="{Binding SaveReportCommand }" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                    <Button Content="Thoát" Margin="10,0,0,0" Grid.Column="2" Style="{StaticResource buttonMain}" Height="31" VerticalAlignment="Top" Click="Button_Click"/>
                </Grid>
            </StackPanel>


        </Grid>
    </Border>
</Window>
